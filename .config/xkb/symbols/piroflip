xkb_symbols "piroflip"  { 
	include "pc+us+ru(winkeys):2+inet(evdev)+group(alt_shift_toggle)+ctrl(nocaps)+shift(both_capslock)+level3(lalt_switch)"

	key <AC06> { [ h, H, Left  ] };
	key <AC07> { [ j, J, Down  ] };
	key <AC08> { [ k, K, Up    ] };
	key <AC09> { [ l, L, Right ] };
	
	key   <UP> { [ VoidSymbol  ] };
	key <LEFT> { [ VoidSymbol  ] };
	key <DOWN> { [ VoidSymbol  ] };
	key <RGHT> { [ VoidSymbol  ] };
};
